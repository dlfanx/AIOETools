<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AIOETools.Views.BarcodeGeneratorWindow"
        Width="300" Height="200"
        Title="Barcode Generator">
    <StackPanel Margin="10" Background="{DynamicResource PrimaryBackground}">
        <TextBox Name="InputTextBox" Watermark="Enter text to generate barcode" Margin="0,0,0,10"/>
        <Button Name="GenerateButton" Content="Generate Barcode" HorizontalAlignment="Center"/>
        <Image Name="BarcodeImage" Width="200" Height="100"/>
    </StackPanel>
</Window>
